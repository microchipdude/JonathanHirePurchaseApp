
<%= simple_form_for(@purchase) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :purchaseno, label: "Purchase Number" %>
    <%= f.association :client %>
    <%= f.input :dateofpurchase, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year - 10,
                              order: [:day, :month, :year], label: "Purchase Date" %>
    <%= f.association :item %>
    <%= f.input :quantity, label: "Quantity" %>
    <%= f.input :purchasevalue, label: "Purchase Value" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
