<p id="notice"><%= notice %></p>

<h1>All Clients</h1>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Names</th>
      <th>DOB</th>
      <th>NRC</th>
      <th>MAN No</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email Address</th>
      <th>Employment Status</th>
      <th>Employer</th>
      <th>Date of Employment</th>
      <th>Gross Salary</th>
      <th>Next of Kin</th>
      <th>Marital Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.dateofbirth %></td>
        <td><%= client.nrc %></td>
        <td><%= client.manno %></td>
        <td><%= client.address %></td>
        <td><%= client.phone %></td>
        <td><%= client.email %></td>
        <td><%= client.employstatus %></td>
        <td><%= client.employministry %></td>
        <td><%= client.dateofemploy %></td>
        <td><%= client.expretirementdate %></td>
        <td><%= number_to_currency(client.grosssalary, :unit=>"ZMK") %></td>
        <td><%= client.nok %></td>
        <td><%= client.maritalstatus %></td>
        <td><%= link_to 'Show', client, class: "btn btn-warning" %></td>
        <td><%= link_to 'Edit', edit_client_path(client), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

&nbsp;<%= link_to 'New Client', new_client_path, class: "btn btn-success" %>
